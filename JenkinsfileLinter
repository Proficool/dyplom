pipeline {
    agent any

    stages {
        stage('Run Linter Tests') {
            steps {
                script {
                    MY_APP_DIR='/var/lib/docker/volumes/jenkins-data-flask/_data/workspace/$JOB_NAME'
                    sh "$MY_APP_DIR docker-compose run lint"
                }
            }
        }
    }

    post {
        cleanup {
            echo 'Cleaning up...'
            deleteDir()
        }
    }
}
